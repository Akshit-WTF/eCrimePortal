<%- include('../_partials/top') %> 
    
    
    <section id="page-content">
        <div class="container">
        <div class="row">
        <div class="content col-lg-12">
            <div class="card">
                <div class="card-header">
                <span class="h4">Donate to the eCrimePortal (of the CNSP Foundation)</span>
                <p class="text-muted">Your donation helps us pay for basic utilities to keep the portal up and running for years!</p>
                </div>
                <div class="card-body">
                <form action="/oncedonate" method="POST">
                <div class="tabs">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#tabProfile" role="tab" aria-controls="home" aria-selected="true">Donor Information</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" id="contact-tab" data-toggle="tab" href="#tabBilling" role="tab" aria-controls="contact" aria-selected="false">Billing Information</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" id="confirm-tab" data-toggle="tab" href="#tabConfirm" role="tab" aria-controls="confirm" aria-selected="false">Amount</a>
                </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="tabProfile" role="tabpanel" aria-labelledby="tab-profile">
                <div class="form-row">
                <div class="form-group col-md-6">
                <label for="name">Name</label>
                <input type="text" class="form-control" name="name" placeholder="Enter your Name" required>
                </div>
                <div class="form-group col-md-6">
                <label for="surname">Surname</label>
                <input type="text" class="form-control" name="surname" placeholder="Enter your Surname" required>
                </div>
                </div>
                <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="email">E-Mail</label>
                    <input class="form-control" type="email" name="email" placeholder="Enter your E-Mail Address" required>
                    </div>
                </div>
                </div>
                <div class="tab-pane fade" id="tabBilling" role="tabpanel" aria-labelledby="tab-billing">
                <div class="form-row">
                <div class="form-group col-md-6">
                <label for="address">Address</label>
                <input type="text" class="form-control" name="address" placeholder="Enter your Apartment, studio, or floor" required>
                </div>
                <div class="form-group col-md-6">
                <label for="address2">Address 2</label>
                <input type="text" class="form-control" name="address2" placeholder="Enter your Street Address" required>
                </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="country">Region</label>
                        <select onchange="set_country(this,country,city_state)" size="1" name="region" required>
                            <option value="" selected="selected">SELECT REGION</option>
                            <option value=""></option>
                            <script type="text/javascript">
                            setRegions(this);
                            </script>
                            </select>
                            
                            
                        </div>
                <div class="form-group col-md-6">
                <label for="state">Country</label>
                <select name="country" size="1" disabled="disabled" onchange="set_city_state(this,city_state)" required></select>
                </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="country">State</label>
                        <select name="city_state" size="1" disabled="disabled" onchange="print_city_state(country,this)" required></select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="city">City</label>
                            <input type="text" class="form-control" name="city" placeholder="Enter your City" required>
                            </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                    <label>Zip Code:</label>
                    <input type="text" class="form-control" name="zip" placeholder="Enter Zip Code" required>
                    </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="tabConfirm" role="tabpanel" aria-labelledby="tab-confirm">
                <div class="row">
                <div class="col-md-6">
                <div class="form-group">
                <label class="form-control-label">Amount</label>
                <input class="form-control" name="amount" type="tel" required>
                </div>
                </div>
                </div>
                <div class="row">
                <div class="col-md-6">
                <div class="form-group">
                <label class="form-control-label">Message</label>
                <input class="form-control" name="message" type="text">
                </div>
                </div>
                </div>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-sm">Donate</button>
                    </div>
                </div>
                </div>
                </form>
                </div>
                </div>
        </div>
        </div>
        </div>
        </section>
<%- include('../_partials/bottom') %>