<%- include('../_partials/top') %>
<section id="page-title" class="page-title-center text-light" style="background-image:url(<%= post.headerpic %>);">
    <div class="bg-overlay"></div>
    <div class="container">
    <div class="page-title">
    <span class="post-meta-category"><a href="/category/<%= post.category %>"><%= post.category %></a></span>
    <h1><%= post.title %></h1>
    <div class="small m-b-20"><%= post.date %> | <a href="/author/<%= post.aurl %>">by <%= post.author %></a></div>
    </div>
    </div>
    </section>
    <section id="page-content" class="sidebar-right">
        <div class="container">
        <div id="blog" class="single-post col-lg-10 center">
        <div class="post-item">
        <div class="post-item-wrap">
        <div class="post-item-description">
            <%- post.content %>
        </div>
        </div>
        </div>
        </div></div>
    </section>
    <%- include('../_partials/bottom') %>